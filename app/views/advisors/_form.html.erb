<%= form_for(@advisor) do |f| %>
  <% if @advisor.errors.any? %>
    <div id="error_explanation" class="alert alert-error" >
      <h2><%= pluralize(@advisor.errors.count, "error") %> prohibited this advisor from being saved:</h2>

      <ul>
      <% @advisor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="row-fluid">
<label><strong>Name</strong><br/>
    <%= f.text_field :name, :class => "input-xxlarge" %>
</label>
</diV>

<div class="row-fluid">
<label><strong>Company</strong><br/>
    <%= f.text_field :job, :class => "input-xxlarge" %>
<label>
</diV>
<div class="row-fluid">
<label><strong>Job Position</strong><br/>
    <%= f.text_field :jobp, :class => "input-xxlarge" %>
<label>
</diV>


<div class="row-fluid">
<label><strong>Quote</strong><br/>
  <%= f.text_field :quote, :class => "input-xxlarge", :placeholder => "i.e Add up will allow students to share their service goals with the world!" %>
<label>
</diV>

<div class="row-fluid" >
	<div class="span6">
      <label><strong>Email</strong>
		   <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= f.text_field :email, :class => "span7", :placeholder => "ex. boris@hotmail.com" %>
        </label>
   		 </div>
	 </div>
     </div>

     <div class="row-fluid">
<label><strong>Feedback</strong><br/>
  <%= f.text_area :feedback, :class => "input-xxlarge", :rows => 3 %>
<label>
</diV>

<br/>
<div class="row-fluid">
<label><strong>Photo</strong>
        <span class="help-block"> Optional </span>
