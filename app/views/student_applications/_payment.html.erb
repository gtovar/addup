<div id="payment" class="tab-pane fade">
  <div class = "row-fluid">

    <div class = "span4">
      <label><strong>Method of payment to the university</strong><br/>
        <%= f.select :method_of_payment, options_for_select([["Please select",nil],["Check",1],["Wire transfer", 2]], :class => "input-large") %>
      </label>
    </div>


  </div>

  <div class="row-fluid">
    <div class="span8">
      <blockquote>
        All the money will go directly to the university's bank account.
      </blockquote>
    </div>
  </div>

  <div id="check">
    <legend>Check data</legend>

    <div class="row-fluid">
      <label><strong>Pay to the order of</strong></label>
      <%= f.text_field :pay_of_the_order_of, :class => "span7", :placeholder => "i.e Write the payee's name. i.e. University Southern California." %>
    </div>

    <div class="row-fluid">
      <label><strong>Send it to</strong></label>
      <%= f.text_field :name_check, :class => "span7", :placeholder => "i.e Write the name of your financial" %>
    </div>

    <div class="controls">
      <%= f.text_field :adress_check, :class => "span7", :placeholder => "i.e Write the address of your University's financial deparment" %>
      <div class="controls controls-row">
        <%= f.text_field :city_check, :class => "span3", :placeholder => "City" %>
        <%= f.text_field :state_check, :class => "span3", :placeholder => "State" %>
        <%= f.text_field :zipcode_check, :class => "span1", :placeholder => "Zipcode" %>
      </div>
    </div>
    <!--<p><span class = "label label-info">Heads up!</span>Be sure to escape any field in the form for proper rendering</p> -->
  </div> <!-- Close tag check -->

  <div id="wire">
    <legend>Wire Transfer</legend>

    <div class="row-fluid">
      <div class = "span4">
        <label><strong>University Bank Account</strong>
          <div class="input-prepend">
            <span class="add-on">#</span>
            <%= f.text_field :univesity_bank_account ,  :class => "span8"  %>
          </div>
        </label>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span4">
        <label><strong>Name of University</strong></label>
        <%= f.text_field :name_of_university,:class => "input-large", :placeholder => "i.e New York University" %>
      </div>

      <div class="span3">
        <label><strong>Confirmation Email</strong>
          <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
            <%= f.text_field :email_of_confirmation,:class => "span11", :placeholder => "i.e studentaccounts@georgetown.edu"%>
          </label>
        </div>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span4">
        <label><strong>Name of Bank</strong></label>
        <%= f.text_field :name_of_bank,:class=>"input-large",:placeholder=>"i.e Chase Bank"%>
      </div>

      <div class="span4">
        <label><strong>Bank Account</strong></label>
        <%= f.text_field :bank_account, :class=>"input-large",:placeholder=>"i.e 128178580"%>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span4">
        <label><strong>ABA/Routing</strong></label>
        <%= f.text_field :abbarouting,:class=>"input-large", :placeholder=>"i.e 11100614"%>
      </div>
      <div class="span4">
        <label><strong>Swift</strong></label>
        <%= f.text_field :swift,:class=>"input-large",:placeholder=>"i.e chasus33"%>
      </div>
    </div>
    <!-- <p><span class = "label label-info">Heads up!</span>Be sure to escape any field in the form for proper rendering</p> -->
  </div> <!-- close tag wire tranfer -->

  <div id="q2">
    <label><strong>Student's University Reference ID</strong><br/>
      <div class="input-prepend">
        <span class="add-on">#</span>
        <%= f.text_field :students_university_id_reference ,  :class => "input-xxlarge", :placeholder => "i.e Student's complete Name and University ID Number" %>
      </div>
    </label>


  </div>

  </div>

