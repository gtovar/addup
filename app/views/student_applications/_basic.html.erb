<div id="basic" class="tab-pane fade in active">
  <div class = "row-fluid">
    <div class = "span3">
      <label><strong>Personal information*</strong>
        <%= f.text_field :last_name, :class => "input-large", :placeholder => "Last Name" %>
      </label>
    </div>
    <div class="span3">
      <label><strong>&nbsp;</strong>
        <%= f.text_field :first_name, :class => "input-large", :placeholder => "First Name" %>
      </label>
    </div>
  </div>

  <div class="row-fluid" >
    <div class="span3">
      <label><strong>Nationality</strong>
        <%= f.text_field :nationality, :class => "input-large", :placeholder => "Nationality" %>
      </label>
    </div>
    <div class = "span3">
      <label><strong>City*</strong>      <div class="input-prepend">
        <%= f.text_field :city , :class => "input-large", :placeholder => "ex. Dallas" %>
 </label>
     </div>
    </div>

  </div>

  <div class="row-fluid">
    <div class = "span3">
      <label><strong>Email</strong>
        <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= f.text_field :email, :class => "span11", :placeholder => "ex. boris@university.edu" %>
        </label>
      </div>
    </div>

    <div class="span3">
      <label><strong>University*</strong>
        <%= f.text_field :university, :class => "input-large", :placeholder => "University" %>
      </label>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">
      <label><strong>Degree</strong>
        <%= f.text_field :degree, :class => "input-large", :placeholder => "Degree" %>
      </label>
    </div>

    <div class="span3">
      <label><strong>Field of study</strong>
        <%= f.text_field :field_of_study,  :class => "input-large", :placeholder => "Study" %>
      </label>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">
      <label><strong>Current year</strong>
        <%= f.text_field :current_year ,  :class => "input-large", :placeholder => "i.e: freshman" %>
      </label>
    </div>

    <div class="span3">
      <label><strong>Length of program</strong>
        <%= f.text_field :length_of_program ,  :class => "input-large", :placeholder => "i.e 4 years" %>
      </label>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">
     <label><strong>Crowdfunding goal*</strong>
        <div class="input-prepend">
          <span class="add-on">$</span>
          <%= f.text_field :crowdfundig_goal_usd , :class => "span9" %>
          <span class="add-on">.00</span>
        </label>
      </div>
    </div>

    <div class="span3">
      <label><strong>Total Annual Cost of Attendance</strong>      <div class="input-prepend">
        <span class="add-on">$</span><%= f.text_field :total_annual_cost_of_attendance,  :class => "span9", :placeholder => "USD" %>
      <span class="add-on">.00</span>
 </label>
   </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span3">
    <label><strong>Time frame for Add Up Campaign* </strong>
      <%= f.select :time_frame, options_for_select([["30 days","30"],["45 days", "45"],["60 days","60"]], @student_application.time_frame), :class => "input-large", :prompt => "i.e 60 days" %>
    </label>
  </div>
</div>
</div>

